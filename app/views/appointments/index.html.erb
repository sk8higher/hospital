<p style="color: green"><%= notice %></p>

<h1>Приемы</h1>
<%= link_to "Создать прием", new_appointment_path, class: "btn btn-outline-secondary" %>
<%= link_to "Получить отчет (XSLX)", download_appointments_path(format: :zip), class: "btn btn-outline-primary" %>
<hr>
<div id="appointments">
  <% @appointments.each do |appointment| %>
    <h3>Прием №<%= appointment.id %> от <%= appointment.appointment_date.strftime("%d.%m.%Y") %></h3>
    <p>
      <%= link_to "Показать", appointment, class: "btn btn-primary" %>
    </p>
    <hr>
  <% end %>
</div>