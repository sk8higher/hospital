<p style="color: green"><%= notice %></p>

<h1>Пациенты</h1>
<%= link_to "Создать пациента", new_patient_path, class: "btn btn-outline-secondary" %>
<%= link_to "Получить отчет (XSLX)", download_patients_path(format: :zip), class: "btn btn-outline-primary" %>
<hr>
<div id="patients">
  <% @patients.each do |patient| %>
    <h3><%= patient.name %></h3>
    <p>
      <%= link_to "Показать", patient, class: "btn btn-primary" %>
    </p>
    <hr>
  <% end %>
</div>